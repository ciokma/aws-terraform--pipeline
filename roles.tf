  name = "cloudformation_test_role"

  assume_role_policy = jsonencode({
    Version = "2012-10-17"
    Statement = [
      {
        Action = "sts:AssumeRole"
        Effect = "Allow"
        Sid    = ""
        Principal = {
          Service = "cloudformation.amazonaws.com"
        }
      },
      {
      Effect = "Allow",
      Action = "sts:AssumeRole",
      Principal = {
        AWS = [
